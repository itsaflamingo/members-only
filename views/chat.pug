extends layout

block content
  h1 #{title}

  ul
    each message in message_list
      li
        p #{message.user.username}
        p #{message.message} 
        p #{message.timestamp}

  form(method='POST' action='')
    div.form-group
      value=(undefined === user ? '' : user.username) 
      input#message.form-control(type='text' name='message' placeholder='Enter message...')
      button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
